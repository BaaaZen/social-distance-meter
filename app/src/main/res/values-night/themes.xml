<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialDistanceMeter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DprimaryColor</item>
        <item name="colorPrimaryVariant">@color/DprimaryLightColor</item>
        <item name="colorOnPrimary">@color/DprimaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DsecondaryColor</item>
        <item name="colorSecondaryVariant">@color/DsecondaryLightColor</item>
        <item name="colorOnSecondary">@color/DsecondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/DsecondaryLightColor</item>
        <item name="android:textColor">@color/DprimaryTextColor</item>
        <item name="android:textColorLink">@color/DsecondaryLightColor</item>
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/DswitchActivated</item>

        <item name="colorDraw">@color/DprimaryTintColor</item>
        <item name="colorFont">@color/DprimaryTextColor</item>
        <item name="colorWarningHigh">@color/DwarningHighColor</item>
        <item name="colorWarningMedium">@color/DwarningMediumColor</item>
        <item name="colorWarningLow">@color/DwarningLowColor</item>
    </style>

    <style name="Theme.SocialDistanceMeter.MainActivity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="tint">@color/DprimaryTintColor</item>
        <item name="tintMode">multiply</item>
    </style>

    <style name="Theme.SocialDistanceMeter.MarkdownActivity" parent="Theme.SocialDistanceMeter" />

    <style name="Theme.SocialDistanceMeter.CardTitle">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/DprimaryTintColor</item>
    </style>

    <style name="Theme.SocialDistanceMeter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SocialDistanceMeter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SocialDistanceMeter.CardDefault">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/DprimaryLightColor</item>
    </style>

    <style name="Theme.SocialDistanceMeter.CardWarning" parent="Theme.SocialDistanceMeter.CardDefault">
        <item name="cardBackgroundColor">@color/DcardWarning</item>
    </style>
</resources>