<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.mhid.opensource.socialdistancemeter">

    <!--  required for continuous background scanning  -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <!--  required for getting location and BLE token in background  -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

    <!--  required for BLE scanner   -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!--  required for startup BLE scanner on boot  -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!--  required to download diagnosis keys  -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_social_distance_meter_square"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_social_distance_meter_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialDistanceMeter">
        <activity
            android:name="de.mhid.opensource.socialdistancemeter.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.SocialDistanceMeter.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.mhid.opensource.socialdistancemeter.activity.SettingsActivity"
            android:label="@string/menu_main_settings"
            android:parentActivityName="de.mhid.opensource.socialdistancemeter.activity.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.mhid.opensource.socialdistancemeter.activity.MainActivity"/>
        </activity>

        <receiver android:name="de.mhid.opensource.socialdistancemeter.services.Autostart">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="de.mhid.opensource.socialdistancemeter.services.BleScanService" android:foregroundServiceType="location"/>
        <service android:name="de.mhid.opensource.socialdistancemeter.services.DiagKeySyncService"/>
    </application>

</manifest>